<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_voucher_request_form" model="ir.ui.view">
        <field name="model">weha.voucher.request</field>
        <field name="inherit_id" ref="weha_voucher_mgmt.view_weha_voucher_request_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    name="action_barcode_scan"
                    class="oe_stat_button"
                    icon="fa-barcode"
                    type="object"
                    help="List view of lines"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Scan Barcodes</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>
