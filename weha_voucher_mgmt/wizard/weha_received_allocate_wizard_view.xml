<?xml version="1.0"?>
<odoo>
    <record id="view_wizard_scan_voucer_allocate" model="ir.ui.view">
        <field name="name">wizard.scan.voucer.allocate.form.view</field>
        <field name="model">weha.wizard.scan.voucher.allocate</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Scan Voucher Allocate">
                <group>
                    <group>
                        <field name="start_number"/>
                        <field name="end_number" attrs="{'invisible':[('is_valid','=', False)]}"/>
                        <field name="is_valid" invisible="1"/>
                    </group>
                    <group>
                        <field name="operating_unit_id"/>
                        <field name="voucher_code_id"/>
                        <field name="year_id"/>
                        <field name="voucher_promo_id"/>
                        <field name="estimate_total"/>
                        <field name="estimate_count"/>
                    </group>
                </group>
                <footer>
                    <button name="process" string="Process" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="act_open_scan_voucher_allocate_view_form" model="ir.actions.act_window">
        <field name="name">Scan Voucher Allocate</field>
        <field name="res_model">weha.wizard.scan.voucher.allocate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_wizard_received_allocate" model="ir.ui.view">
        <field name="name">weha.wizard.received.allocate</field>
        <field name="model">weha.wizard.received.allocate</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Received Voucher Allocate">
                <group>
                    <field name="scan_method" widget="radio"/>
                </group>
                <group>
                    <group>
                        <h1>
                            <field name="code_ean" attrs="{'invisible':[('scan_method','!=', 'one')],'required':[('scan_method','=', 'one')]}"/>
                            <field name="start_ean" attrs="{'invisible':[('scan_method','!=', 'start_end')],'required':[('scan_method','=', 'start_end')]}"/>
                        </h1>
                    </group>
                    <group>
                        <h1>
                            <field name="end_ean" attrs="{'invisible':[('scan_method','!=', 'start_end')], 'required':[('scan_method','=', 'start_end')]}"/>
                        </h1>
                    </group>
                </group>
                <notebook>
                    <page string="Allocate Move" attrs="{'invisible':[('scan_method','=', 'all')]}"> 
                        <field name="allocate_line_wizard_ids" readonly="1">
                            <tree string="Allocate Move">
                                <field name="name" />
                                <field name="date" />
                                <field name="voucher_order_line_id"/>  	                                                                                                                                                                                                                                   
                            </tree>                    	                            	
                        </field>
                    </page>	   
                </notebook>
                <footer>
                    <button name="trans_received" string="Received" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="act_open_received_allocate_view_form" model="ir.actions.act_window">
        <field name="name">Received Allocate</field>
        <field name="res_model">weha.wizard.received.allocate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>