<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="report.paperformat" id="paperformat_voucher_promo_report">
        <field name="name">paperformat.voucher.promo.report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="print_voucher_promo_summary"
        string="Print Voucher Promo Summary"
        model="weha.voucher.promo"
        report_type="qweb-pdf"
        name="weha_voucher_mgmt.print_voucher_promo_summary_view"
        paperformat="paperformat_voucher_promo_report"
        menu="False"/>
    />

    <report
        id="weha_voucher_promo_summary_xlsx"
        string="Print Order"
        model="weha.voucher.order"
        report_type="xlsx"
        name="weha_voucher_mgmt.weha_voucher_promo_summary_xlsx"
        file="weha_voucher_mgmt.weha_voucher_promo_summary_xlsx"
    />

    <template id="print_voucher_promo_summary_view">
        <t t-call="web.html_container">
            <div class="header text-center" style="border-bottom: 2px solid black">
                <h3 class="text-center">Report Voucher Promo Summary</h3>
            </div>
            <div class="article">
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <tr>
                            <th class="text-left" style="width: 10%" rowspan="2">Source</th>
                            <th class="text-left" style="width: 15%" rowspan="2">Date</th>
                            <th class="text-left" style="width: 15%" rowspan="2">Nama Promo</th>
                            <th class="text-left" style="width: 15%" rowspan="2">Store</th>
                            <th class="text-left" style="width: 15%" colspan="2">Alokasi</th>
                            <th class="text-left" style="width: 15%" rowspan="2">Pemakaian Voucher</th>
                        
                        </tr>
                        <tr>
                            <th class="text-left" style="width: 15%" >Dikirim Mktg ke Toko</th>
                            <th class="text-left" style="width: 15%" >Diterima Toko dari Mktg</th>
                        </tr>
                    </thead>
                    <tbody>

                        <t t-foreach="docs['details']" t-as="detail">
                            <tr>
                                <td><span t-esc="detail['voucher_allocate_name']"/></td>
                                <td><span t-esc="detail['voucher_allocate_date']"/></td>
                                <td><span t-esc="detail['voucher_promo_name']"/></td>
                                <td><span t-esc="detail['source_operating_unit_name']"/></td>
                                <td><span t-esc="detail['total_count_voucher']"/></td>
                                <td><span t-esc="detail['total_count_voucher_open']"/></td>
                                <td><span t-esc="detail['total_count_voucher_used']"/></td>
                            </tr>
                        </t>

                    </tbody>
                </table>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col col-3 offset-9 text-right">
                        <ul class="list-inline mt-2">
                            <li class="list-inline-item">Page:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
