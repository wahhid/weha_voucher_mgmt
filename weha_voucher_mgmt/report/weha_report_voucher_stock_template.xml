<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="report.paperformat" id="paperformat_voucher_stock_report">
        <field name="name">paperformat.voucher.order.summary.report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="print_stock_detail"
        string="Print Order"
        model="weha.voucher.order"
        report_type="qweb-pdf"
        name="weha_voucher_mgmt.print_stock_detail_view"
        paperformat="paperformat_voucher_stock_report"
        menu="False"/>
    />

    <template id="print_stock_detail_view">
        <t t-call="web.html_container">
            <div class="header text-center" style="border-bottom: 2px solid black">
                <h3 class="text-center">Report Stock Detail</h3>
                <br/>
                <span class="text-center">
                    <strong>From</strong>:
                    <t t-esc="date_start"/>
                    <strong>To</strong>:
                    <t t-esc="date_end"/>
                </span>
            </div>
            <div class="article">
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <th class="text-left" style="width: 10%">No</th>
                        <th class="text-left" style="width: 15%">Name</th>
                        <th class="text-left" style="width: 15%">Voucher SKU</th>
                        <th class="text-left" style="width: 15%">Voucher Type</th>
                        <th class="text-left" style="width: 15%">Voucher Code</th>
                        <th class="text-left" style="width: 15%">Promo</th>
                        <th class="text-right" style="width: 15%">Amount</th>
                        <th class="text-left" style="width: 15%">Status</th>
                    </thead>
                    <tbody>
                        <t t-set="amount_total" t-value="0"/>
                        <t t-set="no" t-value="0"/>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td colspan="8" class="text-left">
                                    <span t-esc="doc['operating_unit']"/>
                                </td>
                            </tr>
                            <t t-set="no" t-value="no + 1"/>
                            
                            <tr t-foreach="doc['detail']" t-as="detail">
                                <td class="text-left" style="white-space:nowrap;margin:0px;padding:0px;">
                                    <span t-esc="no"/>
                                </td >
                                <td class="text-left" style="white-space:nowrap;margin:0px;padding:0px;">
                                    <span t-esc="detail['voucher_ean']"/>
                                </td >
                                <td class="text-left" style="white-space:nowrap;margin:0px;padding:0px;">
                                    <span t-esc="detail['voucher_sku']"/>
                                </td >
                                <td class="text-left" style="white-space:nowrap;margin:0px;padding:0px;">
                                    <t t-set="values" t-value="dict([('physical','Physical'),('electronic','Electronic'), (False,False)])"/>
                                    <t t-esc="values[detail['voucher_type']]"/>
                                </td>
                                <td class="text-left" style="white-space:nowrap;margin:0px;padding:0px;">
                                    <span t-esc="detail['voucher_code_name']"/>
                                </td>
                                <td class="text-left" style="white-space:nowrap;margin:0px;padding:0px;">
                                    <span t-esc="detail['voucher_promo_name']"/>
                                </td>
                                <td class="text-right" style="white-space:nowrap;margin:0px;padding:0px;">
                                    <span t-esc="detail['voucher_amount']"/>
                                </td>
                                <td class="text-left" style="white-space:nowrap;margin:0px;padding:0px;">
                                    <t t-set="values" t-value="dict([ ('open', 'Open'),('activated', 'Activated'),('damage', 'Damage'),('used', 'Used'),('return', 'Return'),('scrap', 'Scrap'), (False,False)])"/>
                                    <span t-esc="values[detail['state']]"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col col-3 offset-9 text-right">
                        <ul class="list-inline mt-2">
                            <li class="list-inline-item">Page:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

