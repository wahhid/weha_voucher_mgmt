<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="report.paperformat" id="paperformat_voucher_issuing_employee_report">
        <field name="name">paperformat.voucher.issuing.employee.report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="print_voucher_issuing_employee"
        string="Print Voucher Issuing Employee"
        model="weha.voucher.issuing"
        report_type="qweb-pdf"
        name="weha_voucher_mgmt.print_voucher_issuing_employee_view"
        file="weha_voucher_mgmt.print_voucher_issuing_employee_view"
        paperformat="paperformat_voucher_issuing_employee_report"
        menu="False"/>
    />

    <template id="print_voucher_issuing_employee_view">
        <t t-call="web.html_container">
            <div class="header text-center" style="border-bottom: 2px solid black">
                <h3 class="text-center">Report Voucher Issuing Employee</h3>
                <br/>
            </div>
            <div class="article">
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <th class="text-left" style="width: 10%">NIK</th>
                        <th class="text-left" style="width: 15%">Employee Name</th>
                        <th class="text-left" style="width: 15%">Nominal</th>
                        <t t-foreach="skus" t-as="sku">
                            <th class="text-left" style="width: 15%"><span t-esc="sku['mapping_sku_name']"/></th>
                        </t>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr t-foreach="doc['detail']" t-as="detail">
                                <t t-foreach="detail" t-as="v">
                                    <td class="text-left" style="white-space:nowrap;margin:0px;padding:0px;">
                                        <span t-esc="v_value"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col col-3 offset-9 text-right">
                        <ul class="list-inline mt-2">
                            <li class="list-inline-item">Page:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

 <report
        id="print_voucher_issuing_employee_xlsx"
        string="Print Voucher Issuing Employee (XLSX)"
        model="weha.voucher.issuing"
        report_type="xlsx"
        name="weha_voucher_mgmt.print_voucher_issuing_employee_xlsx"
        file="weha_voucher_mgmt.print_voucher_issuing_employee_xlsx"/>
    />
   
</odoo>
