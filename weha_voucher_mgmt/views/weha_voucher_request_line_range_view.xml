<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view for Voucher type -->
        <record id="view_weha_voucher_request_line_ranges_tree" model="ir.ui.view">
            <field name="name">view.weha.voucher.request.line.ranges.tree</field>
            <field name="model">weha.voucher.request.line.ranges</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="start_num" />
                    <field name="end_num" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for Voucher Stage -->
        <record id="view_weha_voucher_request_line_ranges_form" model="ir.ui.view">
            <field name="name">view.weha.voucher.request.line.ranges.form</field>
            <field name="model">weha.voucher.request.line.ranges</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="start_num" />
                            <field name="end_num" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_weha_voucher_request_line_ranges_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Voucher Request Line Range</field>
            <field name="res_model">weha.voucher.request.line.ranges</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Human readable name
                </p><p>
                    Something about 
                </p>
            </field>
        </record>

    </data>
</odoo>