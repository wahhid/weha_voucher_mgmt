            <field name="arch" type="xml">
                <graph string="Voucher Request Statistic" type="pie">
                    <field name="operating_unit_id" type="row"/>
                    <field name="voucher_count" type="measure"/>
                </graph>
            </field>
        </record>
        
        <!-- Main window action for voucher request -->
