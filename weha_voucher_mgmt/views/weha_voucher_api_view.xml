                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline"
                                    placeholder="Name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="batch_id"/>
                                <field name="trans_date"/>
                                <field name="trans_type"/>
                                <field name="t_id"/>
                                <field name="store_id"/>
                                <field name="receipt_number"/>
                                <field name="cashier_id"/>
                                <field name="member_id"/>
