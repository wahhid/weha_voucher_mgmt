<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Tree view for Voucher Order Stage -->
        <record id="view_weha_voucher_issuing_tage_tree" model="ir.ui.view">
            <field name="name">view.weha.voucher.issuing.stage.tree</field>
            <field name="model">weha.voucher.issuing.stage</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="name" />
                    <field name="sequence"/>
                </tree>
            </field>
        </record>
        
        <!-- Form view for Voucher Order Stage -->
        <record id="view_weha_voucher_issuing_stage_form" model="ir.ui.view">
            <field name="name">view.weha.voucher.issuing.stage.form</field>
            <field name="model">weha.voucher.issuing.stage</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline"
                                    placeholder="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <!-- <field name="company_id"/> -->
                                <field name="from_stage_id"/>
                                <field name="next_stage_id"/>
                                <!-- <field name="mail_template_id"/> -->
                            </group>
                            <group>
                                <field name="unattended"/>
                                <field name="approval"/>
                                <field name="approval_user_id" attrs="{'invisible':[('approval','=', False)], 'required':[('approval','=', True)] }"/> 
                                <field name="opened"/>
                                <field name="closed"/>
                                <field name="fold"/>
                            </group>
        
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for Voucher Order Stage -->
        <record id="view_weha_voucher_issuing_stage_search" model="ir.ui.view">
            <field name="name">view.weha.voucher.issuing.stage.search</field>
            <field name="model">weha.voucher.issuing.stage</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="name" />
                    
                </search>
            </field>
        </record>
        
        <!-- Main window action Voucher Order Stage -->
        <record id="action_weha_voucher_issuing_stage_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Voucher Issuing Stage</field>
            <field name="res_model">weha.voucher.issuing.stage</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_weha_voucher_issuing_stage_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Human readable name
                </p><p>
                    Something about 
                </p>
            </field>
        </record>
        
        <menuitem id="weha_voucher_issuing_stage_menu" name="Issuing Stages" parent="weha_voucher_config_main_menu"
            action="action_weha_voucher_issuing_stage_act_window" sequence="46" />

    </data>
</odoo>