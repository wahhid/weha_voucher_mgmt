<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view for Voucher type -->
        <record id="view_weha_voucher_request_line_tree" model="ir.ui.view">
            <field name="name">view.weha.voucher.request.line.tree</field>
            <field name="model">weha.voucher.request.line</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="voucher_code_id" />
                    <field name="amount" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for Voucher Stage -->
        <record id="view_weha_voucher_request_line_form" model="ir.ui.view">
            <field name="name">view.weha.voucher.request.line.form</field>
            <field name="model">weha.voucher.request.line</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="voucher_code_id" />
                            <field name="amount" />
                        </group>
                        <notebook colspan="4">
                            <page string="Range Voucher">
	                        	<field name="request_line_range_ids" widget="one2many_list" nolabel="0" readonly="0">
	                            	<tree string="Range Voucher" create="true" delete="true" edit="true">
	                            	    <field name="start_num" />
                                        <field name="end_num" />	                                	                                                                                                                                                                                                                                   
	                            	</tree>                                        	                            	
	                        	</field>
	                        </page>	   
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_weha_voucher_request_line_search" model="ir.ui.view">
            <field name="name">view.weha.voucher.request.line.search</field>
            <field name="model">weha.voucher.request.line</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="voucher_code_id" />
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_weha_voucher_request_line_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Voucher Request Line</field>
            <field name="res_model">weha.voucher.request.line</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_weha_voucher_request_line_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Human readable name
                </p><p>
                    Something about 
                </p>
            </field>
        </record>
        

    </data>
</odoo>